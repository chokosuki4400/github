// 共通インクルード処理
require_once('phpinc/config.php');

require_once('phpinc/index_func.php');

$html = '<!doctype html>
<html lang="ja">
<head>
	<meta charset="UTF-8">
	<title>KASHIDASH 弐号機 機種リスト</title>
	<style type="text/css">
		body{
			font-family: migu-1c;
			src: url("common/MPDF/ttfonts/migu-1c-regular.ttf") format("truetype");
			font-size:9pt;
		}
		table,th,td{
			border:1px solid #000;
			border-collapse: collapse;
		}
		table{
			border:2px solid #000;
			width:100%;
		}
		th,td{
			padding:1px 5px;
		}
		th{
			border-bottom:2px solid #000;
		}
		.tac{
			text-align:center;
		}
		h1 span{
			font-size:0.5em;
		}
	</style>
</head>
<body>
	<h1><a name="top"></a>事業統括部所有 検証機リスト <span>'.date('Y月m月d日 H時i分').'現在</span></h1>
	<table>
		<tr>
			<th>ID</th>
			<th>機種名</th>
			<th>利用状況</th>
			<th>利用目的</th>
			<th>承認</th>
			<th>在庫</th>
		</tr>';

foreach($device as $key => $value){
	
	// ID
	if($key){
		$id_str = $key;
	} else {
		$id_str = 'NO-ID';
	}
	$html .= '<tr><td class="tac">'.$id_str.'</td>';
	
	// 機種名
	$html .= '<td>'.$value['name'];
/*
	if($itemAddData[$value][0]){
		$html .= ' '.$itemAddData[$value][0];
	}
*/
	$html .='</td>';
	
	// 利用状況
	$html .='<td class="tac">';
	if($value['return_flag'] == 0 && $value['l_user'] != null){
		$html .= '【貸出中】'.$value['l_date'].' '.$value['l_time'].' ';
		$html .= '<strong>'.$value['l_user'].'</strong>';
	} else {
		$html .= '-';
	}
	$html .='</td>';
	
	// 利用目的
	if($value['return_flag'] == 0 && $value['l_user'] != null){
		$purpose = $value['l_purpose'];
		$pClass = '';
	} else {
		$purpose = '-';
		$pClass = ' class="tac"'; 
	}
	$html .='<td'.$pClass.'>'.$purpose.'</td>';
	
	// 承認
	$html .='<td class="tac">';
	if($value['return_flag'] == 0 && $value['l_user'] != null){
		if(empty($value['l_approval'])){
			$html .= '未';
		}else{
			$html .= '済';
		}
	} else {
		if(empty($value['r_approval']) && !empty($value['l_user'])){
			$html .= '未';
		} else {
			$html .= '-';
		}
	}
	$html .='</td><td></td>/tr>';
}

$html .= '
	</table>
</body>
</html>';

//==============================================================
//==============================================================
//==============================================================

include("common/MPDF/mpdf.php");

$mpdf=new mPDF('ja'); 

$mpdf->WriteHTML($html);
$mpdf->Output();
exit;

